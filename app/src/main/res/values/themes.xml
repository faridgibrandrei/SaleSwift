<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
<!--    <style name="Theme.SaleSwift" parent="Theme.MaterialComponents.DayNight.NoActionBar">-->
    <style name="Theme.SaleSwift" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorPrimaryVariant">@color/dark_secondary</item>
        <item name="colorOnPrimary">@color/amber_200</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#8A52AD</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="navigationRailStyle">@style/Widget.App.NavigationRailView</item>
    </style>

    <style name="Widget.App.NavigationRailView" parent="Widget.Material3.NavigationRailView">
        <!-- Material Theme Overlay -->
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.NavigationRailView</item>
    </style>

    <style name="ThemeOverlay.App.NavigationRailView" parent="">
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorSecondaryContainer">@color/dark_primary</item>
        <item name="colorOnSecondaryContainer">@color/dark_icon_primary</item>
        <item name="colorSurface">@color/dark_primary</item>
        <item name="colorOnSurface">@color/dark_text_primary</item>
        <item name="colorOnSurfaceVariant">@color/dark_icon_secondary</item>
    </style>
</resources>